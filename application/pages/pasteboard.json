{
   "layout": "app",

   "areas": {
      "activities": [
         {
            "widget": "paperdart/pd-elasticsearch-store-activity",
            "features": {
               "paste": {
                  "resource": "paste",
                  "target": "paste",
                  "parameter": "paste"
               },
               "create": {
                  "onActions": [ "create" ]
               },
               "update": {
                  "onActions": [ "update" ]
               },
               "reset": {
                  "onActions": [ "reset" ]
               },
               "flags": [
                  { "condition": "AVAILABLE", "flag": "serviceAvailable" },
                  { "condition": "EMPTY", "flag": "isEmpty" },
                  { "condition": "DIRTY", "flag": "isDirty" },
                  { "mimeType": "text/x-markdown", "flag": "isMarkdown" },
                  { "mimeType": "text/html", "flag": "isHtml" }
               ]
            }
         }
      ],

      "contentMain": [
         {
            "widget": "laxarjs/ax-messages-widget"
         },
         {
            "widget": "laxarjs/ax-show-hide-widget",
            "id": "editorShowHide",
            "features": {
               "animation": {
                  "enabled": false
               },
               "visibility": {
                  "toggleOn": "serviceAvailable"
               }
            }
         },
         {
            "widget": "laxarjs/ax-developer-tools-widget"
         }
      ],

      "contentPreview": [
         {
            "widget": "laxarjs/ax-show-hide-widget",
            "id": "markdownPreviewShowHide",
            "features": {
               "animation": {
                  "enabled": false
               },
               "visibility": {
                  "toggleOn": "isMarkdown"
               }
            }
         },
         {
            "widget": "laxarjs/ax-show-hide-widget",
            "id": "htmlPreviewShowHide",
            "features": {
               "animation": {
                  "enabled": false
               },
               "visibility": {
                  "toggleOn": "isHtml"
               }
            }
         }
      ],

      "editorShowHide.content": [
         {
            "widget": "paperdart/pd-source-editor-widget",
            "features": {
               "source": {
                  "resource": "paste"
               }
            }
         },
         {
            "widget": "laxarjs/ax-command-bar-widget",
            "features": {
               "buttons": [
                  {
                     "i18nHtmlLabel": "<i class='fa fa-bolt'></i> Fresh Paste",
                     "action": "reset",
                     "align": "RIGHT",
                     "disableOn": [ "isEmpty" ]
                  },
                  {
                     "i18nHtmlLabel": "<i class='fa fa-recycle'></i> Update",
                     "action": "update",
                     "align": "RIGHT",
                     "disableOn": [ "!isDirty" ]
                  },
                  {
                     "i18nHtmlLabel": "<i class='fa fa-paper-plane'></i> Create",
                     "action": "create",
                     "class": "PRIMARY",
                     "align": "RIGHT"
                  }
               ]
            }
         }
      ],

      "markdownPreviewShowHide.content": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": "<em>Preview</em>",
                  "level": 4
               }
            }
         },
         {
            "widget": "laxarjs/ax-markdown-display-widget",
            "features": {
               "markdown": {
                  "resource": "paste",
                  "attribute": "text",
                  "parameter": "md-section"
               }
            }
         }
      ],

      "htmlPreviewShowHide.content": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": "<em>Preview</em>",
                  "level": 4
               }
            }
         },
         {
            "widget": "laxarjs/ax-html-display-widget",
            "features": {
               "content": {
                  "resource": "paste",
                  "attribute": "text"
               }
            }
         }
      ]
   }
}
